{
   "name": "rewards-program",
   "version": "0.1.0",
   "description": "Service for rewards program to customers awarding points based on each recorded purchase.",
   "author": "Ivan Timoshenko <tis1993@mail.ru>",
   "license": "UNLICENSED",
   "engines": {
      "node": "=16.16.0",
      "npm": "=8.11.0"
   },
   "scripts": {
      "prebuild": "rimraf dist",
      "build": "nest build",
      "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
      "start": "ts-node src/index.ts",
      "start:dev": "nest start --watch",
      "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
      "start:prod": "node dist/main",
      "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:cov": "jest --coverage",
      "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
      "test:e2e": "jest --config ./test/jest-e2e.json",
      "docker:build": "docker build -t rewards-program .",
      "docker:compose": "docker-compose up --build -V",
      "typeorm": "typeorm-ts-node-commonjs",
      "seed": "ts-node ./src/seed/definedSeed.ts",
      "randomSeed": "ts-node ./src/seed/randomSeed.ts"
   },
   "dependencies": {
      "@nestjs/axios": "^0.1.0",
      "@nestjs/common": "^9.0.0",
      "@nestjs/core": "^9.0.0",
      "@nestjs/platform-express": "^9.0.0",
      "@nestjs/swagger": "^6.0.5",
      "@nestjs/terminus": "^9.1.1",
      "@nestjs/typeorm": "^9.0.0",
      "dotenv": "^16.0.1",
      "pg": "^8.4.0",
      "reflect-metadata": "^0.1.13",
      "rimraf": "^3.0.2",
      "rxjs": "^7.2.0",
      "typeorm": "0.3.7"
   },
   "devDependencies": {
      "@nestjs/cli": "^9.0.0",
      "@nestjs/schematics": "^9.0.0",
      "@nestjs/testing": "^9.0.0",
      "@types/express": "^4.17.13",
      "@types/jest": "28.1.4",
      "@types/node": "^16.11.10",
      "@types/supertest": "^2.0.11",
      "@typescript-eslint/eslint-plugin": "^5.0.0",
      "@typescript-eslint/parser": "^5.0.0",
      "eslint": "^8.0.1",
      "eslint-config-prettier": "^8.3.0",
      "eslint-plugin-prettier": "^4.0.0",
      "jest": "28.1.2",
      "prettier": "^2.3.2",
      "source-map-support": "^0.5.20",
      "supertest": "^6.1.3",
      "ts-jest": "28.0.5",
      "ts-loader": "^9.2.3",
      "ts-node": "10.7.0",
      "tsconfig-paths": "4.0.0",
      "typescript": "4.5.2"
   },
   "jest": {
      "clearMocks": true,
      "restoreMocks": true,
      "moduleFileExtensions": [
         "js",
         "ts"
      ],
      "rootDir": "src",
      "testRegex": ".*\\.spec\\.ts$",
      "transform": {
         "^.+\\.(t|j)s$": "ts-jest"
      },
      "collectCoverageFrom": [
         "**/*.ts"
      ],
      "coverageDirectory": "../coverage",
      "testEnvironment": "node",
      "coveragePathIgnorePatterns": [
         "/node_modules/",
         "data-source.ts",
         "main.ts",
         "src/migrations/",
         "src/seed",
         ".+\\.entity\\.ts",
         ".+\\.module\\.ts"
      ]
   }
}
